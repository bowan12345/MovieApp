@model Movie
<!-- Main Form Container -->
<form method="post">
    <div class="card shadow border-0 mt-4">
        <!-- Card Header with Movie Title -->
        <div class="card-header bg-dark bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Name</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Director</p>
                </div>
            </div>
        </div>

        <!-- Card Body - Main Content -->
        <div class="card-body">
            <div class="py-3">
                <!-- Back Button Row -->
                <div class="row">
                    <div class="col-6 col-md-2 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <medium><strong>Back to home</strong></medium>
                        </a>
                    </div>
                </div>

                <!-- Main Content Row -->
                <div class="row">
                    <!-- Left Column - Large Movie Poster -->
                    <div class="col-12 col-lg-6 pe-lg-4">
                        <img src="@Model.ImageUrl" class="rounded shadow w-100"
                             style="max-height: 600px; object-fit: contain;"
                             alt="@Model.Name movie poster" />
                    </div>

                    <!-- Right Column - Trailer and Purchase Info -->
                    <div class="col-12 col-lg-6">
                        <!-- Top Section - Trailer -->
                        <div class="mb-4">
                            @if (!string.IsNullOrEmpty(Model.YoutubeId))
                            {
                                <h4 class="mb-3">
                                    <i class="bi bi-play-circle-fill me-2"></i>Official Trailer
                                </h4>
                                <div class="ratio ratio-16x9 shadow mb-3">
                                    <iframe src="https://www.youtube.com/embed/@Model.YoutubeId?rel=0"
                                            title="@Model.Name official trailer"
                                            frameborder="0"
                                            allowfullscreen></iframe>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="badge bg-secondary">YOUTUBE</span>
                                </div>
                            }
                        </div>

                        <!-- Middle Section - Purchase Info -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="badge bg-primary">@Model.Category.Name</span>
                                </div>

                                <div class="mb-3">
                                    <h6 class="text-dark text-opacity-50 mb-1">RATING: <strong>@Model.Rating</strong></h6>
                                    <h6 class="text-dark text-opacity-50">
                                        LIST PRICE:
                                        <span class="text-decoration-line-through">
                                            @Model.ListPrice.ToString("c")
                                        </span>
                                    </h6>
                                </div>

                                <div class="p-3 bg-light rounded mb-3">
                                    <div class="row text-center">
                                        <!-- Quantity headers -->
                                        <div class="col-3">
                                            <div class="fw-bold text-nowrap">Number of Tickets:</div>
                                        </div>
                                        <div class="col-3">
                                            <div class="text-secondary fw-bold">1-5<i class="bi bi-ticket-perforated"></i></div>
                                        </div>
                                        <div class="col-3">
                                            <div class="text-secondary fw-bold">6-10<i class="bi bi-ticket-perforated"></i></div>
                                        </div>
                                        <div class="col-3">
                                            <div class="text-secondary fw-bold">10+<i class="bi bi-ticket-perforated"></i></div>
                                        </div>
                                    </div>
                                    <div class="row text-center">
                                        <!-- Price values -->
                                        <div class="col-3">
                                            <div class="fw-bold">Price:</div>
                                        </div>
                                        <div class="col-3">
                                            <div class="text-success fw-bold">@Model.Price.ToString("c")</div>
                                        </div>
                                        <div class="col-3">
                                            <div class="text-success fw-bold">@Model.Price5.ToString("c")</div>
                                        </div>
                                        <div class="col-3">
                                            <div class="text-success fw-bold">@Model.Price10.ToString("c")</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white">Count</span>
                                    <input type="number" value="1" min="1" class="form-control">
                                </div>

                                <button type="submit" disabled
                                        class="btn btn-primary w-100 py-2 fw-bold">
                                    ADD TO CART (COMING SOON...)
                                </button>
                            </div>
                        </div>

                        <!-- Bottom Section - Description -->
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">About the Movie</h5>
                                <p class="card-text text-secondary">@Html.Raw(Model.Description)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    /* Custom styling for better visual hierarchy */
    .card-body {
        padding: 1.5rem;
    }

    .ratio-16x9 {
        border-radius: 0.25rem;
        overflow: hidden;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.35em 0.65em;
    }
</style>