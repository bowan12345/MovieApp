                        <div class="col-12">
                            <div class="card border-0 shadow-sm rounded-4">
                                <div class="card-body p-4">
                                    <h4 class="text-primary mb-4">
                                        <i class="bi bi-ticket-perforated"></i> Get Your Tickets
                                    </h4>

                                    <!-- Ticket Types -->
                                    <div class="ticket-types">
