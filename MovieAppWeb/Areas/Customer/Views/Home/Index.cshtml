@model IEnumerable<Movie>
<div class="row pb-3">
    @foreach (var movie in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class=" row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@movie.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@movie.Name</p>
                                <p class="card-title text-warning text-center">by <b>@movie.Director</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-decoration-line-through">
                                        @movie.ListPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    As low as:
                                    <span>
                                        @movie.Price10.ToString("c")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <a asp-action="Details"
                       asp-route-movieId="@movie.Id"
                       class=" btn btn-primary bg-gradient border-0 form-control">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
